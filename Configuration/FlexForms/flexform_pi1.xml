<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>LLL:EXT:pxa_intelliplan_jobs/Resources/Private/Language/locallang_db.xlf:mode.select</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:pxa_intelliplan_jobs/Resources/Private/Language/locallang_db.xlf:mode.list</numIndex>
										<numIndex index="1">Job->list;Job->show</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:pxa_intelliplan_jobs/Resources/Private/Language/locallang_db.xlf:mode.show</numIndex>
										<numIndex index="1">Job->show</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>

					<settings.singleViewPid>
						<TCEforms>
							<label>LLL:EXT:pxa_intelliplan_jobs/Resources/Private/Language/locallang_db.xlf:flexform.singleViewPid</label>
							<displayCond>FIELD:switchableControllerActions:!=:Job->show</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>1</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.singleViewPid>

					<settings.root_category>
						<TCEforms>
							<label>LLL:EXT:pxa_intelliplan_jobs/Resources/Private/Language/locallang_db.xlf:flexform.root_category</label>
							<displayCond>FIELD:switchableControllerActions:!=:Job->show</displayCond>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<treeConfig>
									<parentField>parent</parentField>
									<appearance>
										<maxLevels>99</maxLevels>
										<expandAll>TRUE</expandAll>
										<showHeader>TRUE</showHeader>
									</appearance>
								</treeConfig>
								<foreign_table>sys_category</foreign_table>
								<foreign_table_where>AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent= 0) ORDER BY sys_category.sorting</foreign_table_where>
								<size>10</size>
								<autoSizeMax>20</autoSizeMax>
								<minitems>1</minitems>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.root_category>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>